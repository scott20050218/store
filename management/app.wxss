/**app.wxss**/
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 全局按钮样式 */
button {
  margin: 0;
  padding: 0;
  background: transparent;
  border: none;
  line-height: inherit;
}

button::after {
  border: none;
}

/* 全局输入框样式 */
input {
  height: auto;
  min-height: auto;
}

/* 全局滚动区域 */
.scrollarea {
  flex: 1;
  overflow-y: auto;
}
