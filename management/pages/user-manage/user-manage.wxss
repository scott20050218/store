.scrollarea {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 30rpx;
  padding-bottom: 120rpx;
}

.add-bar {
  margin-bottom: 24rpx;
}

.add-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background: linear-gradient(135deg, #6462cc 0%, #5ec9db 100%);
  color: #fff;
  border-radius: 12rpx;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.form-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.form-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.form-picker {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.form-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.form-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
}

.form-btn.cancel {
  background: #f0f0f0;
  color: #666;
}

.form-btn.submit {
  background: linear-gradient(135deg, #6462cc 0%, #5ec9db 100%);
  color: #fff;
}

.user-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.user-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.user-row:last-child {
  border-bottom: none;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.user-phone {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-top: 6rpx;
}

.user-status {
  display: inline-block;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-top: 8rpx;
}

.user-status.status-normal {
  background: #e6f7ff;
  color: #1890ff;
}

.user-status.status-registered {
  background: #f6ffed;
  color: #52c41a;
}

.user-status.status-frozen {
  background: #fff7e6;
  color: #fa8c16;
}

.user-status.status-deleted {
  background: #fff1f0;
  color: #f5222d;
}

.user-action {
  font-size: 28rpx;
  color: #6462cc;
  padding: 8rpx 20rpx;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
