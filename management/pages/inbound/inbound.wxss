/**pages/inbound/inbound.wxss**/
.scrollarea {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 30rpx;
  min-height: 100%;
}

.form-header {
  text-align: center;
  padding: 40rpx 0;
}

.form-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.form-subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  flex-shrink: 0;
  width: 180rpx;
}

.picker-value {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 30rpx;
  color: #666;
}

.picker-arrow {
  margin-left: 10rpx;
  color: #ccc;
}

.form-value-readonly {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #666;
}

.form-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333;
}

.optional {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  margin-left: 8rpx;
}

.placeholder {
  color: #999;
}

.form-item-col {
  flex-direction: column;
  align-items: flex-start;
}

.form-item-col .form-label {
  margin-bottom: 20rpx;
}

/* 标签选择 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 4rpx solid transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.tag-item.selected {
  border-color: #333;
  box-shadow: 0 0 0 2rpx #fff;
}

.tag-check {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

/* 拍照区域 */
.photo-area {
  width: 100%;
}

.photo-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ccc;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
}

.photo-icon {
  font-size: 64rpx;
  margin-bottom: 10rpx;
}

.photo-text {
  font-size: 24rpx;
  color: #999;
}

.photo-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.photo-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  display: block;
}

.photo-remove {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 8rpx 0;
  border-radius: 0 0 16rpx 16rpx;
}

.custom-type-item {
  padding-left: 180rpx;
}

.submit-btn {
  margin-top: 60rpx;
  background: linear-gradient(135deg, #5ec9db 0%, #6462cc 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 30rpx 0;
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}
