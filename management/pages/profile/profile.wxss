/**pages/profile/profile.wxss**/
.scrollarea {
  height: 100vh;
  box-sizing: border-box;
  background: #f5f5f5;
}

.container {
  padding: 30rpx;
  /* 底部留足空间：tabBar + iPhone 安全区(home indicator)，避免版本信息被遮挡 */
  padding-bottom: 280rpx;
  padding-bottom: calc(200rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
}

/* 头像区域 */
.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  min-width: 160rpx;
  min-height: 160rpx;
  flex-shrink: 0;
  border-radius: 50%;
  overflow: hidden;
  background: linear-gradient(135deg, #5ec9db 0%, #6462cc 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(100, 98, 204, 0.4);
}

.avatar-text {
  font-size: 64rpx;
  color: #fff;
  font-weight: bold;
}

.greeting {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 信息卡片 */
.info-card,
.settings-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.save-passcode-btn {
  margin-top: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background: linear-gradient(135deg, #6462cc 0%, #5ec9db 100%);
  color: #fff;
  border-radius: 12rpx;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 30rpx;
  color: #666;
  flex-shrink: 0;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

.info-input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333;
  background: #f8f8f8;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

/* 设置项 */
.settings-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
}

.settings-label {
  font-size: 30rpx;
  color: #333;
}

.settings-arrow {
  font-size: 28rpx;
  color: #ccc;
}

.settings-arrow.danger {
  color: #f27d51;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.version-info text {
  font-size: 24rpx;
  color: #999;
}
