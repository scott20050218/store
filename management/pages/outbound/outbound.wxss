/**pages/outbound/outbound.wxss**/
.scrollarea {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

.list-header {
  margin-bottom: 24rpx;
}

.list-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.list-hint {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.item-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.item-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.item-row:last-child {
  border-bottom: none;
}

.item-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.item-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.item-tag {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.item-qty {
  font-size: 26rpx;
  color: #666;
}

.item-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #f27d51 0%, #fdc765 100%);
  border-radius: 32rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.item-action text {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* 出库数量弹窗 */
.modal-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 101;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.modal-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.modal-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.modal-label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
}

.modal-value {
  font-size: 30rpx;
  color: #333;
}

.modal-tag {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-left: 12rpx;
}

.modal-input-wrap {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}

.modal-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.modal-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.modal-btns {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.modal-btn.cancel {
  background: #f0f0f0;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #f27d51 0%, #fdc765 100%);
  color: #fff;
  font-weight: bold;
}
