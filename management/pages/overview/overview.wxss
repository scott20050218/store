/**pages/overview/overview.wxss 物品总览*/
.scrollarea {
  height: 100vh;
  background: #f5f5f5;
}

.container {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

.list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.item-icon-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.item-icon-box-inner {
  font-size: 48rpx;
}

.item-info {
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.item-qty {
  font-size: 26rpx;
  color: #999;
}

.item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-shrink: 0;
}

.item-remaining-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.item-days {
  font-size: 40rpx;
  font-weight: bold;
  color: #DE0012;
  margin-bottom: 12rpx;
}

.item-days.warning {
  color: #DE0012;
}

.progress-wrap {
  width: 180rpx;
}

.progress-bar {
  height: 12rpx;
  background: #e8e8e8;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #DE0012;
  border-radius: 6rpx;
  transition: width 0.2s;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}
