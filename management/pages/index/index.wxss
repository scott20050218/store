/**index.wxss**/
.scrollarea {
  height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #5ec9db 0%, #fdc765, 100%);
}

.container {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.header {
  margin-top: 60rpx;
  margin-bottom: 80rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.button-container {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.action-button {
  width: 100%;
  box-sizing: border-box;
  padding: 60rpx 40rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.2s, box-shadow 0.2s;
}

.action-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.overview-btn {
  background: linear-gradient(135deg, #6462cc 0%, #5ec9db 100%);
}

.inbound-btn {
  background: linear-gradient(135deg, #5ec9db 0%, #6462cc 100%);
}

.outbound-btn {
  background: linear-gradient(135deg, #f27d51 0%, #fdc765 100%);
}

.btn-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.btn-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.btn-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
